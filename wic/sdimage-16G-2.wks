# short-description: Create SD card image with a boot partition
# long-description: Creates a partitioned SD card image. Boot files
# are located in the first vfat partition.

part /boot --source bootimg-partition --ondisk mmcblk0 --fstype=vfat --label boot --active --align 4 --size 16
part / --source rootfs --ondisk mmcblk0 --fstype=ext4 --label rootfs1 --align 4 --size 5500
part "" --ondisk mmcblk0 --fstype=ext4 --label rootfs2 --align 4 --size 5500
